<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"

    android:padding="6dp">

    <TextView
        android:id="@+id/textViewShowMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewChatItemUsername"
        android:layout_marginTop="-8dp"
        android:layout_toEndOf="@+id/imageViewChatItem"
        android:background="@drawable/message_background_left"
        android:padding="8dp"
        android:text="Hello World"
        android:textColor="#fff"
        android:textSize="18sp"
        android:enabled="true"
        android:textIsSelectable="true"
        android:focusable="true"
        android:longClickable="true" />

    <TextView
        android:id="@+id/textViewChatItemUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_marginLeft="-4dp"
        android:padding="8dp"
        android:text="Hello World"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp" />

</RelativeLayout>